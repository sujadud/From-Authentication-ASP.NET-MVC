@model Task1.VIewModel.UserModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="p-3"></div>
    <div class="card custom-card align-content-center mt-md-3  col-md-6 m-md-auto">
        <div class="card-header bg-primary text-white">
            <h3 class="text-center">Login Form</h3>
            @Html.ValidationSummary()
        </div>
        <div class="card card-body card-body">
            <div class="form-group p-2 ">
                <lebel id="@Model.Email" />
                <input type="text" class="col-12" placeholder="Enter your email" name="Email" />
                @*@Html.ValidationMessageFor(model => model.Email)*@
            </div>
            <div class="form-group p-2">
                <lebel id="@Model.Password" />
                <input type="password" class="col-12" placeholder="Enter your password" name="Password"/>
                @*@Html.ValidationMessageFor(model => model.Password)*@
            </div>
            <div class="form-group p-2">
                <button type="submit" class="btn btn-primary rounded-0">Login</button>
                <a class="bg-secondary text-white p-2" href="~/Account/Register">Create account</a>
            </div>
        </div>
    </div>
}  